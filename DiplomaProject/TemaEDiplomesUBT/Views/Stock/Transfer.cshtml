@model TemaEDiplomesUBT.Models.ViewModels.StockTransferViewModel

@{
    ViewData["Title"] = "Transfer Stock";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Transfer" method="post">
    <div class="form-group">
        <label asp-for="ProductId">Product</label>
        <select asp-for="ProductId" asp-items="ViewBag.Products" class="form-control"></select>
    </div>
    <div class="form-group">
        <label asp-for="SourceWarehouseId">Source Warehouse</label>
        <select asp-for="SourceWarehouseId" asp-items="ViewBag.Warehouses" class="form-control"></select>
    </div>
    <div class="form-group">
        <label asp-for="DestinationWarehouseId">Destination Warehouse</label>
        <select asp-for="DestinationWarehouseId" asp-items="ViewBag.Warehouses" class="form-control"></select>
    </div>
    <div class="form-group">
        <label asp-for="Quantity">Quantity</label>
        <input asp-for="Quantity" class="form-control" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Transfer</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
