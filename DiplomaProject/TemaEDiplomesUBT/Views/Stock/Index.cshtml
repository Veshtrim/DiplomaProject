@model IEnumerable<TemaEDiplomesUBT.Models.ViewModels.StockViewModel>

@{
    ViewData["Title"] = "Stock Overview";
}

<h1>@ViewData["Title"]</h1>

<div class="d-flex justify-content-between mb-3">
    <div>
        <a asp-action="Adjust" class="btn btn-primary">Adjust Stock</a>
        <a asp-action="Transfer" class="btn btn-primary">Transfer Stock Between Warehouses</a>
    </div>
</div>

<div class="table-responsive">
    <table id="stockTable" class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.First().ProductName)</th>
                <th>@Html.DisplayNameFor(model => model.First().WarehouseName)</th>
                <th>@Html.DisplayNameFor(model => model.First().Quantity)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.ProductName)</td>
                    <td>@Html.DisplayFor(modelItem => item.WarehouseName)</td>
                    <td>@Html.DisplayFor(modelItem => item.Quantity)</td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            $('#stockTable').DataTable({
                "paging": true,
                "lengthChange": true,
                "searching": true,
                "ordering": true,
                "info": true,
                "autoWidth": false,
                "responsive": true
            });
        });
    </script>
}
