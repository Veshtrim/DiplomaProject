@model IEnumerable<TemaEDiplomesUBT.Models.Purchase>

<h2>Purchases List</h2>

<div class="table-responsive">
    <table id="purchasesTable" class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Document Number</th>
                <th>Supplier</th>
                <th>Date</th>
                <th>Total Amount</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var purchase in Model)
            {
                <tr>
                    <td>@purchase.PurchaseDocumentNumber</td>
                    <td>@purchase.Supplier.Name</td>
                    <td>@purchase.PurchaseDate.ToString("yyyy-MM-dd")</td>
                    <td>@purchase.TotalAmount.ToString("C")</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@purchase.PurchaseId" class="btn btn-primary">Edit</a>
                        <a asp-action="Details" asp-route-id="@purchase.PurchaseId" class="btn btn-success">Details</a>
                        <a asp-action="Delete" asp-route-id="@purchase.PurchaseId" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<a asp-action="Create" class="btn btn-success">Create New Purchase</a>

@section Scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            $('#purchasesTable').DataTable({
                "paging": true,
                "lengthChange": true,
                "searching": true,
                "ordering": true,
                "info": true,
                "autoWidth": false,
                "responsive": true
            });
        });
    </script>
}
