@model TemaEDiplomesUBT.Models.ViewModels.PaymentViewModel

@{
    ViewBag.Title = "Delete Payment";
}

<h2>Delete Payment</h2>

<div>
    <h3>Are you sure you want to delete this payment?</h3>
    <div>
        <h4>Payment</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                Payment ID
            </dt>
            <dd class="col-sm-10">
                @Model.PaymentId
            </dd>
            <dt class="col-sm-2">
                Amount
            </dt>
            <dd class="col-sm-10">
                @Model.Amount
            </dd>
            <dt class="col-sm-2">
                Payment Date
            </dt>
            <dd class="col-sm-10">
                @Model.PaymentDate.ToShortDateString()
            </dd>
        </dl>

        <form asp-action="DeleteConfirmed">
            <input type="hidden" asp-for="PaymentId" />
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" asp-route-saleId="@Model.SaleId" class="btn btn-secondary">Back to List</a>
        </form>
    </div>
</div>
