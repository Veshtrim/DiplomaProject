@model TemaEDiplomesUBT.Models.ViewModels.SaleViewModel

<h2>Delete Sale</h2>

<h3>Are you sure you want to delete this sale?</h3>

<div>
    <h4>Sale Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Sale Date
        </dt>
        <dd class="col-sm-10">
            @Model.SaleDate.ToString("yyyy-MM-dd")
        </dd>
        <dt class="col-sm-2">
            Total Amount
        </dt>
        <dd class="col-sm-10">
            $@Model.TotalAmount.ToString("0.00")
        </dd>
    </dl>

    <h4>Items in this Sale:</h4>
    <table class="table">
        <thead>
            <tr>
                <th>Product</th>
                <th>Warehouse</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Subtotal</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var detail in Model.SaleDetails)
            {
                <tr>
                    <td>@detail.ProductName</td>
                    <td>@detail.WarehouseName</td>
                    <td>@detail.Quantity</td>
                    <td>$@detail.Price.ToString("0.00")</td>
                    <td>$@(detail.Quantity * detail.Price)</td>
                </tr>
            }
        </tbody>
    </table>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="SaleId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
