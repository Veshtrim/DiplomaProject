@model TemaEDiplomesUBT.Models.ViewModels.DayOffViewModel

<h2>Create Day Off</h2>

<form asp-action="Create">
    <div class="form-group">
        <label for="DayOffDate">Date</label>
        <input asp-for="DayOffDate" class="form-control" type="date" />
        <span asp-validation-for="DayOffDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Reason">Reason</label>
        <input asp-for="Reason" class="form-control" />
        <span asp-validation-for="Reason" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
